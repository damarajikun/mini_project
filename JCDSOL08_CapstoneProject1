data_barang = {
    '1122334455' : {'Kategori': 'Minuman', 'Nama Produk': 'Bear Brand 189 ml', 'Produsen': 'NESTLE', 'Qty Stok': 808, 'Terjual' : 2192, 'Satuan': 'kaleng', 'Harga': 10000},  
